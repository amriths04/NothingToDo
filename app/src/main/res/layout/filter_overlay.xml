<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterOverlayRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_rounded_bg"
    android:padding="18dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Drag handle -->
        <View
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="?attr/inverseTextPrimary"
            android:layout_marginBottom="12dp" />

        <!-- Filter Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/inverseTextPrimary"
            android:paddingBottom="8dp"
            android:fontFamily="@font/nf" />

        <!-- Date Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/inverseTextPrimary"
            android:paddingTop="8dp"
            android:paddingBottom="1dp"
            android:fontFamily="@font/nf" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/filterToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/filterUpcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/filterOverdue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overdue"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Flag Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flag"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="1dp"
            android:textColor="?attr/inverseTextPrimary"
            android:fontFamily="@font/nf" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/flagOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flagged only"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Done Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="1dp"
            android:textColor="?attr/inverseTextPrimary"
            android:fontFamily="@font/nf" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/doneOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed only"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/pendingOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending only"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Repeat Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="1dp"
            android:textColor="?attr/inverseTextPrimary"
            android:fontFamily="@font/nf" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/repeatOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeating only"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/nonRepeatOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-repeating only"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sort Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:paddingBottom="4dp"
            android:textColor="?attr/inverseTextPrimary"
            android:fontFamily="@font/nf" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sortDateAsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date ↑"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/sortDateDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date ↓"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/sortTitleAsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title A–Z"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/sortTitleDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title Z–A"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />

                <RadioButton
                    android:id="@+id/sortFlaggedFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flagged first"
                    android:textColor="?attr/inverseTextPrimary"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/nf" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
