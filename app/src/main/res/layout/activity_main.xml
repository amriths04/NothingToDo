<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/cardBackgroundColor">

    <!-- Top Container (Fixed) -->
        <LinearLayout
            android:id="@+id/topContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp">

            <!-- Search Bar -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/search_box_border"
            android:padding="2dp">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search"
                android:background="@drawable/search_background"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableEnd="@android:drawable/ic_btn_speak_now"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="?attr/cardTextPrimary"
                android:textColorHint="?attr/cardTextSecondary"
                android:textSize="20sp"
                android:fontFamily="@font/nf"
                android:backgroundTint="@android:color/transparent" />
        </FrameLayout>

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <include
                    android:id="@+id/todayGrid"
                    layout="@layout/grid_card_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include
                    android:id="@+id/scheduledGrid"
                    layout="@layout/grid_card_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <include
                    android:id="@+id/allGrid"
                    layout="@layout/grid_card_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include
                    android:id="@+id/flaggedGrid"
                    layout="@layout/grid_card_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <!-- My Lists Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/myListsTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Lists"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?attr/cardTextPrimary"
                    android:fontFamily="@font/nf"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <ImageButton
                    android:id="@+id/addListButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="?attr/cardIconTint"
                    android:contentDescription="Add New List" />
            </LinearLayout>
    </LinearLayout>

        <!-- Scrollable Custom List Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myListsRecycler"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@id/topContainer"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="-4dp"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical" />


    <!-- Fixed Bottom Bar -->
    <RelativeLayout
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:layout_alignParentBottom="true"
    android:background="?attr/cardBackgroundColor"
    android:elevation="8dp">

    <!-- Top border line (always full width) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentTop="true"
        android:background="?attr/cardTextSecondary" />

    <!-- Content wrapper with padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="22dp"
            android:paddingTop="7dp"
            android:paddingEnd="15dp"
            android:paddingBottom="7dp">

            <ImageView
                android:id="@+id/newReminderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/newrem"
                app:tint="?attr/cardTextPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="Settings"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="1dp"
                android:src="@drawable/ic_sett"
                app:tint="?attr/cardIconTint" />
        </LinearLayout>
</RelativeLayout>
</RelativeLayout>
